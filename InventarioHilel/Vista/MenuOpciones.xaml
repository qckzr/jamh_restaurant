        <Button Content="Alertas" FontSize="20" Height="53" HorizontalAlignment="Left" Margin="494,480,0,0" Name="b_alertas" VerticalAlignment="Top" Width="292" FontWeight="Bold" Cursor="Hand" Click="b_alertas_Click" />
        <Button Height="37" HorizontalAlignment="Left" Margin="1295,29,0,0" Name="b_cerrarAdmin" VerticalAlignment="Top" Width="37" Click="button1_Click_1" Cursor="Hand">
            <Button.Background>
                <ImageBrush ImageSource="/InventarioHilel;component/Images/Actions-application-exit-icon.png" />
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/InventarioHilel;component/Images/Actions-application-exit-icon.png" />
            </Button.OpacityMask>
        </Button>
        <Button Content="usuario" Height="35" HorizontalAlignment="Left" Margin="1146,151,0,0" Name="button1" VerticalAlignment="Top" Width="186" Click="button1_Click" Cursor="Hand" />
    </Grid>
</Page>
