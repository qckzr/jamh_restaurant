<Page x:Class="InventarioHilel.Vista.MenuOpciones"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1388"
	Title="MenuOpciones">
    <Grid>
        <Label Content="Administrador" Height="40" HorizontalAlignment="Left" Margin="1182,83,0,0" Name="labelTipoUsuario" VerticalAlignment="Top" Width="150" FontSize="18" FontWeight="Normal" />
        <Image Height="32" HorizontalAlignment="Left" Margin="1146,85,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Width="30" Source="/InventarioHilel;component/Images/lock-icon.png" />

        <Image Height="87" HorizontalAlignment="Left" Margin="-10,648,0,0" Name="image3" Stretch="Fill" VerticalAlignment="Top" Width="1408" Source="/InventarioHilel;component/Images/bordecito.png" />
        <Label Content="Seleccione la opción que desea realizar:" Height="47" HorizontalAlignment="Left" Margin="375,118,0,0" Name="label1" VerticalAlignment="Top" Width="529" FontSize="28" FontWeight="Bold" />
        <Button Content="Actualizar Inventario" Height="53" HorizontalAlignment="Left" Margin="313,254,0,0" Name="b_ActualizarInventario" VerticalAlignment="Top" Width="292" FontSize="20" FontWeight="Bold" Click="b_ActualizarInventario_Click" Cursor="Hand" />
        <Button Content="Administrar Productos" FontSize="20" Height="53" HorizontalAlignment="Left" Margin="313,370,0,0" Name="b_AdministrarProductos" VerticalAlignment="Top" Width="292" FontWeight="Bold" Cursor="Hand" Click="b_AdministrarProductos_Click" />
        <Button Content="Administrar Usuarios" FontSize="20" Height="53" HorizontalAlignment="Left" Margin="678,370,0,0" Name="b_AdministrarUsurios" VerticalAlignment="Top" Width="292" FontWeight="Bold" Cursor="Hand" Click="b_AdministrarUsurios_Click" />
